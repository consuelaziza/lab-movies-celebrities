<h2>Details</h2>



     <p>Title:{{movie.title}}</p>
     <p>Genre:{{movie.genre}}</p>
     <p>Description:{{movie.plot}}</p>
    
   
<p>Cast:</p>
<ul>
{{#each movie.cast}}
    <li>{{this.name}}, {{this.occupation}}, {{this.catchPhrase}}</li>
{{/each}}
</ul>
<form action="/movies/{{movie._id}}/delete" method="POST">
    <button class="btn btn-outline-danger">Delete</button>
</form>

<form action="/movies/{{movie._id}}/edit" method="GET">
    <button type="submit" class="btn btn-outline-warning">Edit</button>
</form>

  

