<h2>New Movies</h2>

<form method= "POST" action="celebrities/create">
  <div class="row gx-3 gy-2 align-items-center" aria-label="Basic outlined example">
    <label class="visually-hidden">Title</label>
    <input class="form-control" type="text" name="title" placeholder="Movie Title">
    <br>
    <label class="visually-hidden">Genre</label>
    <input class="form-control" type="text" name="genre" placeholder="genre">
    <br>
    <label class="visually-hidden">plot</label>
    <input class="form-control" type="text" name="plot" placeholder="Description">
    <br>
<select name="cast" id="cast" multiple>
    {{#each celebrities}}
<option value="{{this._id}}">{{this.name}}</option>
{{/each}}
</select>
    <br>
    <button class="btn btn-outline-success" type="submit">SUBMIT</button>
  </div>
</form>

<hr>
<a href="/"><button class="btn btn-outline-success">Back to Home</button></a>